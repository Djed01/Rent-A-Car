<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

        <Style TargetType="StackPanel">
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Red" Direction="0" BlurRadius="10" ShadowDepth="0" Opacity="1" />
                </Setter.Value>
            </Setter>
        </Style>

    <Style TargetType="Grid">
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="White" Direction="0" BlurRadius="4" ShadowDepth="0" Opacity="1" />
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>